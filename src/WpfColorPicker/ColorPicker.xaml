                         Width="50" Hue="{Binding Hue, Mode=TwoWay}"/>
        <local:TransparencyPicker DockPanel.Dock="Left" HorizontalAlignment="Left" Width="50" 
                                  Color="{Binding Color, Mode=OneWay}"
                                  Alpha="{Binding Alpha, Mode=TwoWay}"/>
        -->

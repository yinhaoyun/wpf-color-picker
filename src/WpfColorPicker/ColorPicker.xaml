<UserControl x:Class="Dsafa.WpfColorPicker.ColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dsafa.WpfColorPicker"
             xmlns:converters="clr-namespace:Dsafa.WpfColorPicker.Converters"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="555" d:DesignWidth="1000"
             d:DataContext="{d:DesignInstance Type=local:ColorPickerViewModel, IsDesignTimeCreatable=True}"
             x:Name="colorPicker"
             Background="{Binding ElementName=colorPicker, Path=Background}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/StaticBrushes.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:UnitToPercentConverter x:Key="toPercentConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Canvas>
        <Canvas.Resources>
            <!--
            <Style TargetType="{x:Type Label}" BasedOn="{StaticResource {x:Type Label}}">
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Foreground" Value="Gray"/>
            </Style>
            -->
            <Style x:Key="RgbTitle" TargetType="Label">
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="15.75"/>
                <Setter Property="FontFamily" Value="Microsoft YaHei UI"/>
                <Setter Property="Foreground" Value="#5a5a5a"/>
            </Style>
            <Style x:Key="RgbValue" TargetType="Label">
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="15.75"/>
                <Setter Property="FontFamily" Value="Microsoft YaHei UI"/>
                <Setter Property="Foreground" Value="#a0a0a0"/>
            </Style>
        </Canvas.Resources>

        <local:ColorWheelPicker Canvas.Left="0" Canvas.Top="0"
                                          Width="251"
                                          Height="249" 
                                          Hue="{Binding Hue, Mode=TwoWay}"
                                          Saturation="{Binding Saturation, Mode=TwoWay}"/>

        <Border Background="#181818" Canvas.Left="323"
                Width="328" Height="321"
                CornerRadius="20"/>
        <Label Content="Saturation" Canvas.Left="348" Canvas.Top="162" Foreground="#f0f0f0" FontSize="17.5" FontFamily="Calbri" Padding="0, 0"/>
        <local:SaturationPickerHorizontal Canvas.Left="348" Canvas.Top="192"
                                          Width="280" Height="13"
                                          Saturation="{Binding Saturation, Mode=TwoWay}"
                                          Hue="{Binding Hue, Mode=OneWay}"/>

        <Label Content="Brightness" Canvas.Left="348" Canvas.Top="242" Foreground="#f0f0f0" FontSize="17.5" FontFamily="Calbri" Padding="0, 0"/>
        <local:BrightnessPickerHorizontal Canvas.Left="348" Canvas.Top="274"
                                          Width="280" Height="13"
                                          Brightness="{Binding Brightness, Mode=TwoWay}"
                                          Saturation="{Binding Saturation, Mode=OneWay}"
                                          Hue="{Binding Hue, Mode=OneWay}"/>

        <Border Canvas.Left="6" Canvas.Top="299"
                Width="70" Height="28"
                CornerRadius="5"
                Background="#191919"
                />
        <Border Canvas.Left="90" Canvas.Top="299"
                Width="70" Height="28"
                CornerRadius="5"
                Background="#191919"
                />
        <Border Canvas.Left="176" Canvas.Top="299"
                Width="70" Height="28"
                CornerRadius="5"
                Background="#191919"
                />
        <Label Canvas.Left="6" Canvas.Top="299"
               Padding="12,3"
               Style="{StaticResource RgbTitle}"
               HorizontalContentAlignment="Center"
               Content="R"/>
        <Label Canvas.Left="30" Canvas.Top="299"
               HorizontalContentAlignment="Center" Width="46"
               Padding="3,2,3,2"
               BorderThickness="1" BorderBrush="Transparent"
               Style="{StaticResource RgbValue}"
               Content="{Binding Red, Mode=TwoWay}" />

        <Label Canvas.Left="90" Canvas.Top="299"
               Padding="12,3"
               Style="{StaticResource RgbTitle}"
               Content="G"/>
        <Label Canvas.Left="114" Canvas.Top="299"
               HorizontalContentAlignment="Center" Width="46"
               Padding="3,2,3,2"
               BorderThickness="1" BorderBrush="Transparent"
               Style="{StaticResource RgbValue}"
               Content="{Binding Green, Mode=TwoWay}"/>

        <Label Canvas.Left="176" Canvas.Top="299"
               Padding="12,3"
               Style="{StaticResource RgbTitle}"
               Content="B"/>
        <Label Canvas.Left="200" Canvas.Top="299" 
               HorizontalContentAlignment="Center" Width="46"
               Padding="3,2,3,2"
               BorderThickness="1" BorderBrush="Transparent"
               Style="{StaticResource RgbValue}"
               Content="{Binding Blue, Mode=TwoWay}"/>
        <!--

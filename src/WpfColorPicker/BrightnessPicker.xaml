<local:SliderPicker x:Class="Dsafa.WpfColorPicker.BrightnessPicker"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dsafa.WpfColorPicker"
             mc:Ignorable="d" 
             d:DesignHeight="187" d:DesignWidth="30"
             Background="Transparent" 
             Padding="10, 0"
             SnapsToDevicePixels="True">
    <Rectangle>
        <Rectangle.Fill>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" x:Name="brightnessGradients">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Offset="0" Color="Red"/>
                    <GradientStop Color="Black" Offset="1" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
        </Rectangle.Fill>
    </Rectangle>
</local:SliderPicker>

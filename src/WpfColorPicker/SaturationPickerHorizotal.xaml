<local:SliderPickerHorizontal x:Class="Dsafa.WpfColorPicker.SaturationPickerHorizontal"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dsafa.WpfColorPicker"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="274"
             Background="Transparent" 
             Padding="0, 0, 0, 0"
             SnapsToDevicePixels="True">
    <Rectangle Width="{Binding Path=ActualWidth}" Stroke="#5a5a5a" StrokeThickness="0"
               Height="13" VerticalAlignment="Top"
               RadiusX="6" RadiusY="6">
        <Rectangle.Fill>
            <LinearGradientBrush StartPoint="1,0" EndPoint="0,0" x:Name="saturationGradients">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Offset="0" Color="{Binding Path=Hue, Mode=OneWay}"/>
                    <GradientStop Color="White" Offset="1" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
        </Rectangle.Fill>
    </Rectangle>
</local:SliderPickerHorizontal>
